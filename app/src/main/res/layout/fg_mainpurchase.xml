<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <digiwin.pulltorefreshlibrary.recyclerview.ScrollViewForRecycler
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layout_60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_6dp"
                android:background="@drawable/bg_main_white"
                android:orientation="vertical"
                android:paddingTop="@dimen/layout_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/main_tv_draw"
                    android:drawablePadding="@dimen/layout_10dp"
                    android:gravity="center"
                    android:text="@string/main_purchase"
                    android:textColor="@color/black32"
                    android:textSize="@dimen/textSize_16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ry_list1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_6dp"
                android:background="@drawable/bg_main_white"
                android:orientation="vertical"
                android:paddingTop="@dimen/layout_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/main_tv_draw"
                    android:drawablePadding="@dimen/layout_10dp"
                    android:gravity="center"
                    android:text="@string/main_instock"
                    android:textColor="@color/black32"
                    android:textSize="@dimen/textSize_16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ry_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_6dp"
                android:background="@drawable/bg_main_white"
                android:orientation="vertical"
                android:paddingTop="@dimen/layout_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/main_tv_draw"
                    android:drawablePadding="@dimen/layout_10dp"
                    android:gravity="center"
                    android:text="@string/main_check"
                    android:textColor="@color/black32"
                    android:textSize="@dimen/textSize_16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ry_list3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_6dp"
                android:background="@drawable/bg_main_white"
                android:orientation="vertical"
                android:paddingTop="@dimen/layout_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/main_tv_draw"
                    android:drawablePadding="@dimen/layout_10dp"
                    android:gravity="center"
                    android:text="@string/main_return"
                    android:textColor="@color/black32"
                    android:textSize="@dimen/textSize_16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ry_list4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_6dp" />
            </LinearLayout>
        </LinearLayout>
    </digiwin.pulltorefreshlibrary.recyclerview.ScrollViewForRecycler>

</FrameLayout>